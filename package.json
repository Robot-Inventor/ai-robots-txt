{
  "name": "@robot-inventor/ai-robots-txt",
  "version": "0.0.0",
  "description": "ai.robots.txt for npm",
  "homepage": "https://github.com/Robot-Inventor/ai-robots-txt#readme",
  "bugs": {
    "url": "https://github.com/Robot-Inventor/ai-robots-txt/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robot-Inventor/ai-robots-txt.git"
  },
  "license": "MIT",
  "author": "Robot-Inventor",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "lint": "eslint --flag unstable_native_nodejs_ts_config \"./src/**/*.ts\" \"./scripts/**/*.ts\"",
    "update": "node ./scripts/download.ts",
    "build": "tsc -p tsconfig.build.json",
    "ci:version": "changeset version",
    "ci:publish": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@robot-inventor/eslint-config": "^11.1.3",
    "@robot-inventor/tsconfig-base": "^7.0.0",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "overrides": {
      "zod-validation-error": "^5.0.0"
  }
}
